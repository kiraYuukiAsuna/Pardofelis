<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sukiUi="clr-namespace:SukiUI;assembly=SukiUI" 
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:namespace="clr-namespace:PardofelisUI"
			 xmlns:anotherNamespace="clr-namespace:PardofelisUI.Utilities"
             x:Class="PardofelisUI.App">
    <Application.DataTemplates>
		<anotherNamespace:ViewLocator />
    </Application.DataTemplates>
    
    <Application.Resources>
        <ResourceDictionary>
            <FontFamily x:Key="DefaultFontFamily">avares://PardofelisUI/Assets#Source Han Sans SC</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
    
    <Application.Styles>

        <StyleInclude Source="avares://Avalonia.Controls.ColorPicker/Themes/Fluent/Fluent.xaml" />
        <StyleInclude Source="avares://AvaloniaEdit/Themes/Fluent/AvaloniaEdit.xaml" />
        <sukiUi:SukiTheme ThemeColor="Blue"/>
        <avalonia:MaterialIconStyles />

    </Application.Styles>
    
</Application>
